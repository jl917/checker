{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir":"./_tmp/",
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*"
  ]
}